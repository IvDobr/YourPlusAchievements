<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.dobrinets.yourplusachievements" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoBar" >
        </activity>
        <activity
            android:name=".AchievesActivity"
            android:label="@string/title_activity_achieves"
            android:icon="@android:drawable/ic_menu_agenda">
        </activity>
        <activity
            android:name=".SeeAchieveActivity"
            android:label="@string/title_activity_see_achieve"
            android:icon="@android:drawable/ic_menu_info_details">
        </activity>
        <activity
            android:name=".AddAchieveActivity"
            android:label="@string/title_activity_add_achieve"
            android:icon="@android:drawable/ic_input_add">
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
